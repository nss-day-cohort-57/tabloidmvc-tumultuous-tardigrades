@model TabloidMVC.Models.ViewModels.ViewCommentsViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>@Model.PostTitle</h1>

<p>
    <a asp-controller="Post" asp-action="Details" asp-route-id="@Model.PostId">Return to Post</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Display Name
            </th>
            <th>
                Date Posted
            </th>
            <th>
                Subject
            </th>
            <th>
                Content
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Comments) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserProfile.DisplayName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
